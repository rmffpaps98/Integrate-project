<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_check_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:orientation="horizontal"
        android:paddingLeft="32dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="72dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
            android:id="@+id/txt_check_type_title"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:text="품종을 확인하시겠습니까?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="21sp" />

    <ImageButton
            android:id="@+id/imgBtn_check_type_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/yes" />

    <ImageButton
            android:id="@+id/imgBtn_check_type_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/no" />

</LinearLayout>